<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE8FF"
    android:paddingLeft="10dp"
    tools:context=".BreedInfoActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="332dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Breed_name"
        app:layout_constraintVertical_bias="0.307">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orgin_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Origin"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/average_weight_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Average Weight"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/average_height_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Average Height"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/average_age_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Average Age"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nature_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Nature"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F8F6F6"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Price"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/dog_img"
        android:layout_width="239dp"
        android:layout_height="261dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/dog" />

    <TextView
        android:id="@+id/Breed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#F8F6F6"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Breed Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_img"
        app:layout_constraintVertical_bias="0.063" />

</androidx.constraintlayout.widget.ConstraintLayout>